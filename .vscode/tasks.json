{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run update on startup",
      "type": "shell",
      "command": "~/.cargo/bin/rustup update; ~/.cargo/bin/cargo update; ~/.cargo/bin/cargo install-update -a",
      "windows": {
        "command": "rustup update && cargo update && cargo install-update -a"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
  ]
}